<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_view_elevation"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/material_corner_radius"
    card_view:contentPadding="@dimen/material_small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_small_padding"
            android:layout_marginStart="@dimen/material_small_padding"
            android:layout_marginTop="@dimen/material_small_padding"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Text1"/>

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_small_padding"
            android:layout_marginStart="@dimen/material_small_padding"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Text1"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/openLinkButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_small_padding"
            android:onClick="openLink"
            android:textColor="#006c90"
            tools:text="@string/roomfinder"/>

    </LinearLayout>

</android.support.v7.widget.CardView>