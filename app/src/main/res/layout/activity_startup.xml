<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/startupTumLogo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/material_default_padding"
        android:layout_marginEnd="@dimen/material_default_padding"
        android:src="@drawable/tum_logo_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startupTumMotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startupTumLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_default_padding"
        android:text="@string/startup_motto"
        android:textColor="@color/color_primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startupTumLogo" />

    <TextView
        android:id="@+id/startupLoading"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@id/startupTumMotto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_default_padding"
        android:text="@string/loading"
        android:textColor="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startupTumMotto" />

    <TextView
        android:id="@+id/startupLoadingFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startupLoading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_default_padding"
        android:text="@string/loading_first_time"
        android:textColor="@color/color_primary"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startupLoading" />

</android.support.constraint.ConstraintLayout>
