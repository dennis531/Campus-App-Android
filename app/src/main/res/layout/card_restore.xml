<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/card_padding_vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="@dimen/card_padding_vertical"
    android:elevation="@dimen/cardview_elevation"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="3dp"
    tools:ignore="UnusedAttribute">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="restoreCards"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/startup_tum_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            card_view:srcCompat="@drawable/ic_action_restore"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restore_all_cards"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
</android.support.v7.widget.CardView>