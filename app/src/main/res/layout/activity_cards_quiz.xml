<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="card"
            type="de.tum.in.tumcampusapp.component.studycard.model.StudyCard"/>

        <variable
            name="handler"
            type="de.tum.in.tumcampusapp.component.studycard.CardsQuizActivity"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true" />

        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/cards_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/card_quiz_turn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <include
                        layout="@layout/layout_all_errors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/card_question"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingTop="8dp"
                        android:text="@={card.front_text}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/card_answer"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:visibility="@{safeUnbox(handler.isShowingAnswer) ? View.VISIBLE : View.GONE}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingTop="8dp"
                        android:text="@={card.back_text}"
                        android:visibility="@{safeUnbox(handler.isShowingAnswer) ? View.VISIBLE : View.GONE}" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <Button
                android:id="@+id/card_quiz_turn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> handler.showAnswer()}"
                android:text="@string/show_answer"
                android:visibility="@{safeUnbox(handler.isShowingAnswer) ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/card_positive_result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> handler.setUpNextCard()}"
                android:tint="@android:color/black"
                android:visibility="@{safeUnbox(handler.isShowingAnswer) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_negative_result"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_quiz_turn"
                app:srcCompat="@drawable/ic_clear" />

            <ImageButton
                android:id="@+id/card_negative_result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> handler.setUpNextCard()}"
                android:tint="@android:color/black"
                android:visibility="@{safeUnbox(handler.isShowingAnswer) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/card_positive_result"
                app:layout_constraintTop_toTopOf="@+id/card_quiz_turn"
                app:srcCompat="@drawable/ic_check" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
