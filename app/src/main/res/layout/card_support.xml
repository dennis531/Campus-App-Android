<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StandardCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_us_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:typeface="sans"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/support_us"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FlatButton"
                android:text="@string/facebook"
                android:id="@+id/facebook"
                android:drawableStart="@drawable/ic_facebook_white_transparent"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FlatButton"
                android:text="@string/github"
                android:id="@+id/github"
                android:drawableStart="@drawable/ic_github_white"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FlatButton"
                android:text="@string/email"
                android:id="@+id/email"
                android:drawableStart="@drawable/ic_mail_outline"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>