<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <!-- The toolbar aka SupportActionBar -->
    <include layout="@layout/toolbar"/>

    <include
        layout="@layout/layout_all_errors"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/tvCaption"
        style="@style/SectionHeadline"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/identifier"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/identifier"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow android:paddingTop="@dimen/padding_default">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/name"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow android:paddingTop="@dimen/padding_default">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/contact_person"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/adress"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow android:paddingTop="@dimen/padding_default">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/homepage"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homepage"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="web"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/email"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="email"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/phone"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="phone"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/fax"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/fax"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="phone"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/secretary"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/secretary"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="phone"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow android:paddingTop="@dimen/padding_default">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/extra_name"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/extra_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:autoLink="phone"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/extra"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/extra"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/bib"
                    android:textSize="@dimen/semilarge_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/bib"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/semilarge_text_size"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>