<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="2dp"
        android:top="20dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#CBCBCB"/>
            </shape>
        </rotate>
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#CBCBCB"/>
            <stroke
                android:width="1dp"
                android:color="#CBCBCB"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>