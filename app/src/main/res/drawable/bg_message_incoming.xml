<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:top="15dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/chat_border"/>
            </shape>
        </rotate>
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>